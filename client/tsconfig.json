{
  "compilerOptions": {
    "outDir": "../public/build/",
    "noImplicitAny": true,
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": [
      "esnext",
      "es6",
      "dom"
    ],
    "strict": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noEmit": true
  },
  "include": [
    "./src", "webpack.prod.js"
  ],
  "exclude": [
    "node_modues",
    "build"
  ]
}
